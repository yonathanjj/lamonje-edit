<script>
const imageGrid = document.querySelector('.image-grid');
const columns = Array.from(imageGrid.querySelectorAll('.column'));

const scrollSpeed = 2; // Adjust this value for scroll speed

function updateScroll() {
    const scrollY = window.scrollY;

    columns.forEach((column, index) => {
        const direction = index % 2 === 0 ? -1 : 1;
        const offset = scrollY * scrollSpeed * direction;
        column.style.transform = `translateY(${offset % window.innerHeight}px)`;
    });

    requestAnimationFrame(updateScroll);
}

window.addEventListener('scroll', updateScroll);
updateScroll();
</script>
